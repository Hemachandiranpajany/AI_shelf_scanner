# Database
DATABASE_URL=postgresql://user:password@localhost:5432/shelf_scanner

# Google Gemini API (FREE - get at https://aistudio.google.com/app/apikey)
GEMINI_API_KEY=your_gemini_api_key_here

# Google Cloud Vision (Optional - fallback only)
GOOGLE_CLOUD_PROJECT_ID=your_project_id
GOOGLE_APPLICATION_CREDENTIALS=path/to/credentials.json

# Google Books API (Optional - for higher rate limits)
GOOGLE_BOOKS_API_KEY=your_google_books_api_key

# Goodreads OAuth (Optional)
GOODREADS_API_KEY=your_goodreads_api_key
GOODREADS_API_SECRET=your_goodreads_api_secret

# Security
JWT_SECRET=your_secure_random_jwt_secret_min_32_chars
ENCRYPTION_KEY=your_secure_random_encryption_key_min_32_chars

# Server Configuration
PORT=5000
NODE_ENV=development
CLIENT_URL=http://localhost:3000

# API Configuration
REQUEST_TIMEOUT_MS=30000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000
CACHE_TTL_MS=300000

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads
